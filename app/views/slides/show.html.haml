- model_class = Slide
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @slide.title
%p
  %strong= model_class.human_attribute_name(:page_url) + ':'
  %br
  = @slide.page_url
%p
  %strong= model_class.human_attribute_name(:published) + ':'
  %br
  = @slide.published
%p
  %strong= model_class.human_attribute_name(:image) + ':'
  %br
  = image_tag(@slide.image.attached_image.url(:medium))
  
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), slides_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_slide_path(@slide), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), slide_path(@slide), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
